<h1>Register as a new Customer!</h1>
<%= link_to 'New Customer', home_new_path %>
<br>

<h1>Existing Customers</h1>

<table>
  <thead>
    <tr>
      <th>First</th>
      <th>Last</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first %></td>
        <td><%= customer.last.chars.first + "." %></td> <%# Last name Initial %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', home_home_path %>