<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table cellspacing="20">
  <thead>
    <tr>
      <th>Game Name</th>
      <th>Game Info</th>
      <th>LinkToGame</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.info %></td>
        <td><%= game.linkToGame %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

